<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/background_color_time_isha</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_primary_accent</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/background_color_time_fajer</item>
    </style>

    <style name="MainTextStyle">

    </style>

    <style name="FontForSmallDevices">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">@dimen/text_font_size_small</item>
    </style>

    <style name="TextLightStyle">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/text_color_secondary_white</item>
    </style>

    <style name="TextDarkStyle">
        <item name="android:fontFamily">@font/arial</item>
        <item name="android:textSize">@dimen/text_font_size_medium</item>
        <item name="android:textColor">@color/text_color_primary_black</item>
    </style>

    <style name="MainBackgroundImageStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="MainSettingsImageButtonStyle">
        <item name="android:layout_width">@dimen/settings_image_button_size</item>
        <item name="android:layout_height">@dimen/settings_image_button_size</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">@dimen/settings_image_button_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_image_button_margin</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="MainLinearRemainingPrayerNameStyle">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginBottom">48dp</item>
    </style>

    <style name="MainNextPrayerTextStyle" parent="TextLightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainPrayerTextStyle" parent="TextLightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainNextPrayerTimeTextStyle" parent="TextLightStyle">
        <item name="android:layout_width">wrap_content</item>
