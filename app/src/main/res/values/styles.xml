    <style name="MainLinearlayoutDateStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/background_image</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/background_color_view_date</item>
