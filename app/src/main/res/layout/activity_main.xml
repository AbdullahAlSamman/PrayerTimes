<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.gals.prayertimes.viewmodel.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        tools:context="com.gals.prayertimes.view.MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/descriptions"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                android:src="@drawable/background_night" />

            <ImageButton
                android:id="@+id/settingButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/round_settings_black" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/background"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="14dp"
                android:columnCount="1"
                android:rowCount="2">

                <LinearLayout
                    android:id="@+id/linerRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nextPrayerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/arial"
                        android:text="@string/isha"
                        android:textAlignment="center"
                        android:textColor="@color/dateTextColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/prayerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/arial"
                        android:text="@string/remaining_time"
                        android:textAlignment="center"
                        android:textColor="@color/dateTextColor"
                        android:textSize="20dp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/nextTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="@font/arial"
                    android:text="@string/ttime"
                    android:textAlignment="center"
                    android:textColor="@color/dateTextColor"
                    android:textSize="22dp" />
            </GridLayout>

            <LinearLayout
                android:id="@+id/linearDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/background"
                android:layout_marginTop="5dp"
                android:background="@color/dateColor"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/mDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/arial"
                    android:text="@string/testmDate"
                    android:textAlignment="center"
                    android:textColor="@color/dateTextColor"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/separator"
                    android:textAlignment="center"
                    android:textColor="@color/dateTextColor"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/sDateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:fontFamily="@font/arial"
                    android:text="@{vm.sFullDate}"
                    android:textAlignment="center"
                    android:textColor="@color/dateTextColor"
                    android:textSize="20dp"
                    tools:text="@string/testsDate" />

                <TextView
                    android:id="@+id/dayView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/arial"
                    android:text="@{vm.day}"
                    android:textAlignment="center"
                    android:textColor="@color/dateTextColor"
                    android:textDirection="rtl"
                    android:textSize="20dp"
                    tools:text="@string/testDay" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPrayersTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearDate"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/view_rectangle_6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/arial"
                        android:text="@string/isha"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/ishaTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@{vm.domainPrayer.isha}"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        tools:text="@string/ttime" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/view_rectangle_5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/arial"
                        android:text="@string/maghrib"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/maghribTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@{vm.domainPrayer.maghrib}"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        tools:text="@string/ttime" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/view_rectangle_4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/arial"
                        android:text="@string/asr"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/asrTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@{vm.domainPrayer.asr}"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        tools:text="@string/ttime" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/view_rectangle_3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/arial"
                        android:text="@string/duhr"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/duhrTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@{vm.domainPrayer.duhr}"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        tools:text="@string/ttime" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/view_rectangle_2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/arial"
                        android:text="@string/sunrise"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/sunriseTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@{vm.domainPrayer.sunrise}"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        tools:text="@string/ttime" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/view_rectangle_1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/arial"
                        android:text="@string/fajer"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/fajerTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/arial"
                        android:text="@{vm.domainPrayer.fajer}"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="20dp"
                        tools:text="@string/ttime" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
